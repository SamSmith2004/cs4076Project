<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="ul.cs4076project.Controller.MainController">

    <!-- Header (Top) -->
    <top>
        <StackPane prefHeight="100.0" style="-fx-background-color: lightgray;">
            <!-- Logo on the left -->
            <ImageView fx:id="imageView" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                        StackPane.alignment="TOP_LEFT">
                <image>
                    <Image url="@images/ul_logo.png" backgroundLoading="true" />
                </image>
            </ImageView>

            <!-- Centered Text -->
            <Label text="Lecture Timetable" style="-fx-font-size: 36px; -fx-font-weight: bold;"
                   StackPane.alignment="CENTER">
                <!-- Bind the left margin to the logo's width -->
                <StackPane.margin>
                    <Insets left="200.0" /> <!-- Adjust this value to match the logo's width -->
                </StackPane.margin>
            </Label>
        </StackPane>
    </top>

    <!-- Main Content (Center) -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Course Selection -->
            <Pane>
                <Label>Select Course Timetable</Label>
            </Pane>

            <!-- Buttons and Labels -->
            <HBox spacing="20.0" alignment="CENTER">
                <VBox alignment="CENTER" spacing="20.0">
                    <Label fx:id="welcomeText" />
                    <Button text="Hello!" onAction="#onHelloButtonClick" />
                </VBox>
                <VBox alignment="CENTER" spacing="20.0">
                    <Label fx:id="stopText" />
                    <Button text="STOP" onAction="#onStopButtonClick" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>